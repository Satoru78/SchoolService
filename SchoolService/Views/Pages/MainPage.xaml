<Page x:Class="SchoolService.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolService.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button IsEnabled="False" Content="Ближайшие записи" Name="btnNext" Click="btnNext_Click" Width="250"></Button>
            <Button Content="Запись на услугу" Name="btnAddClientService" Click="btnAddClientService_Click" Width="250" Margin="0,10,0,10"></Button>
            <Button Content="Список услуг" Name="btnServiceList" Click="btnServiceList_Click" Width="250" ></Button>
        </StackPanel>
    </Grid>
</Page>
