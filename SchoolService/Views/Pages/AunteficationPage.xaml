<Page x:Class="SchoolService.Views.Pages.AunteficationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolService.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AunteficationPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="20" Text="Перед началом работы необходимо активировать режим администратора."></TextBlock>

            <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="Введите код (0000):"></TextBlock>
                <TextBox Name="txbCode" Width="200"></TextBox>
            </StackPanel>
            <Button Name="btnNext" Content="Далее" Width="150" Margin="0,20,0,0" Click="btnNext_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
